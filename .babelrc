{
  "presets": ["@babel/preset-env"],
  "env": {
    "production": {
      "plugins": ["transform-remove-console"]
    }
  },
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@routes": "./src/routes",
          "@controllers": "./src/controllers",
          "@models": "./src/models",
          "@utils": "./src/utils",
          "@middlewares": "./src/middlewares"
        }
      }
    ]
  ]
}