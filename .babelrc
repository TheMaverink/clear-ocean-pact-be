{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
         
          "@controllers": "./src/controllers",
          "@models": "./src/models",
          "@utils": "./src/utils",
          "@routes": "./src/routes",
          "@middlewares": "./src/middlewares"
        }
      }
    ]
  ]
}
